{
  "name": "ironfish-wallet-server",
  "version": "0.0.1",
  "description": "Server that provides Iron Fish light clients access to the network.",
  "author": "Iron Fish <contact@ironfish.network> (https://ironfish.network)",
  "homepage": "https://github.com/iron-fish/ironfish#readme",
  "license": "MPL-2.0",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iron-fish/ironfish.git"
  },
  "scripts": {
    "dev": "nodemon --config ./nodemon.json --exec 'yarn build && yarn start'",
    "lint": "eslint --ext .ts .",
    "test": "yarn build && CACHE_PATH='test/cache' BUILD_CACHE=false jest src/* --forceExit --runInBand",
    "format": "prettier . --write",
    "prebuild": "node bin/proto && rimraf dist",
    "tsoa-gen": "tsoa spec-and-routes",
    "build": "yarn prebuild && yarn tsoa-gen && tsc -b && tsc-alias -p tsconfig.json",
    "start": "node dist/server.js",
    "prepare": "husky install"
  },
  "bugs": {
    "url": "https://github.com/iron-fish/ironfish/issues"
  },
  "devDependencies": {
    "@ironfish/sdk": "^1.8.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/leveldown": "^4.0.3",
    "@types/levelup": "^5.1.2",
    "@types/node": "20.4.2",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "grpc-tools": "^1.12.4",
    "husky": ">=6",
    "leveldown": "^6.1.1",
    "levelup": "^5.1.1",
    "lint-staged": ">=10",
    "nodemon": "^3.0.1",
    "prettier": "3.0.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "ts-proto": "1.155.1",
    "tsc-alias": "^1.8.7",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "express": "^4.18.3",
    "jest": "^29.7.0",
    "source-map-support": "0.5.21",
    "supertest": "^6.3.4",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.1.2",
    "tsoa": "^6.1.4"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{js,ts}": "prettier --write"
  }
}
