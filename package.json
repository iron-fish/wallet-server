{
  "name": "ironfish-wallet-server",
  "version": "0.0.1",
  "description": "Server that provides Iron Fish light clients access to the network.",
  "author": "Iron Fish <contact@ironfish.network> (https://ironfish.network)",
  "homepage": "https://github.com/iron-fish/ironfish#readme",
  "license": "MPL-2.0",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iron-fish/ironfish.git"
  },
  "scripts": {
    "dev": "nodemon --config ./nodemon.json --exec 'yarn build && yarn start'",
    "lint": "eslint --ext .ts .",
    "test": "yarn prebuild && vitest run",
    "test-unit": "yarn prebuild && vitest run --config ./vitest.unit.ts",
    "test-integration": "yarn prebuild && vitest run --config ./vitest.integration.ts",
    "format": "prettier . --write",
    "prebuild": "node bin/proto && rimraf dist",
    "build": "yarn prebuild && tsc -b && tsc-alias -p tsconfig.json",
    "start": "node dist/server",
    "client": "node dist/client",
    "health": "node dist/health",
    "prepare": "husky install"
  },
  "bugs": {
    "url": "https://github.com/iron-fish/ironfish/issues"
  },
  "devDependencies": {
    "@grpc/grpc-js": "1.8.18",
    "@ironfish/sdk": "^1.7.0",
    "@types/node": "20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "grpc-tools": "1.12.4",
    "husky": ">=6",
    "lint-staged": ">=10",
    "nodemon": "^3.0.1",
    "prettier": "3.0.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "ts-proto": "1.155.1",
    "tsc-alias": "^1.8.7",
    "typescript": "5.1.6",
    "vitest": "^0.34.1"
  },
  "dependencies": {
    "source-map-support": "0.5.21"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{js,ts}": "prettier --write"
  }
}
